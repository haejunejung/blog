{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"extends": ["@junizi0408/biome-config"],
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".next",
			"node_modules",
			"dist",
			"app/globals.css",
			"components/ui",
			"lib"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useExplicitType": "off",
				"useComponentExportOnlyModules": "off",
				"useSortedClasses": "off"
			},
			"style": {
				"noDefaultExport": "off"
			},
			"performance": {
				"noReExportAll": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
